<!-- RoomIndex -->
<div class ="roomPage">
    <div class="container-fluid">
        <div class=option>
            <h2>Nos Chambres</h2>
        </div>
        <div class="galery">
            <div class="row justify-content-around">
                {% for key, room in rooms %}
                    <div class="card-gallery col-lg-3 col-sm-8 col-md-5">
                        <button type="button" class="btn">
                            <img src="/assets/images/rooms/{{ photos[key][0].photo_name }}" class="img-thumbnail" alt="{{ room.name }}" data-toggle="modal" data-target="#modal{{ key }}">
                        </button>
                        <div class="card-body-gallery">
                            <p class="card-title">{{ room.name }}</p>
                        </div>
                    </div>
                    <div class="modal fade" id="modal{{ key }}" tabindex="-1" role="dialog" aria-labelledby="chambre" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modal{{ key }}">{{ room.name }}</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                </div>
                                <div class="modal-body">
                                    <img src="/assets/images/rooms/{{ photos[key][0].photo_name }}" class="card-img-top" alt="{{ room.name }}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<hr/>
<!-- end RoomIndex -->

