{% extends 'layoutVisitor.html.twig' %}

{% block content %}
    <div class="container-fluid"><h1>Commentaires clients</h1>
        <div class="row"></div>
        <a class="btn btn-primary" href="addreview" role="button">Partagez votre exp√©rience</a>
    </div>

    <div class="card-deck">
        {% for review in reviews %}
            <div class="card">
                <p class="text-right p-2 pr-3">Note : {{ review.grade }}/{{ rules.maximumGrade }}</p>
                <h5 class="card-title text-center">{{ review.name }}</h5>
                <div class="card-body">


                    <p class="card-text">{{ review.comment }}</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">{{ review.date }}</small>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
