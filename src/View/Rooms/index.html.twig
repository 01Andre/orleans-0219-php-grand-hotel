{% extends 'layout.html.twig' %}
{% block title %}Chambres Grand Hôtel{% endblock %}
{% block content %}
    <h1>Les chambres du Grand Hôtel d'Orléans</h1>
    {% for key, room in rooms %}
        <div class="card roomCard mb-3 pb-3 mt-4">

            <div class="row m-0 align-items-center">
                {% if key is odd %}
                    <div class="d-none d-md-block col-md-6 p-0">


                        <div id="carouselExampleIndicators{{ key }}" class="carousel slide" data-ride="carousel">

                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="/assets/images/{{ room['photo1'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/assets/images/{{ room['photo2'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/assets/images/{{ room['photo3'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/assets/images/{{ room['photo4'] }}" alt="photo chambre">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>


                    </div>
                {% endif %}
                <div class="col-md-6">
                    <div class="card-body">
                        <h2 class="card-title text-center">{{ room['name'] }}</h2>
                        <div class="row font-weight-bold">
                            <p class="card-text text-right col-5">{{ room['price'] }} €</p>
                            <p class="card-text text-right col-5">{{ room['area'] }} m²</p>
                        </div>
                        <div class="row">
                            <p class="card-text">{{ room['description'] }}</p>
                        </div>
                        <div class="services">
                            <div class="row mb-3 mt-4">
                                <h3 class="col text-center"> Services</h3>
                            </div>
                            <div class="card-text row">
                                {% for caracteristic in caracteristics[key] %}
                                    {% if caracteristic is null %}
                                    {% else %}
                                        {% if loop.index0 is even %}
                                            <ul class="col-12 col-lg-4 text-center">
                                            <li>{{ caracteristic }}</li>
                                        {% endif %}
                                        {% if loop.index0 is odd %}
                                            <li>{{ caracteristic }}</li>
                                            </ul>
                                        {% endif %}
                                        {% if loop.last and loop.index0 is even %}
                                            </ul>
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>

                    </div>
                </div>
                {% if key is not odd %}
                    <div class="md-block col-md-6 p-0">


                        <div id="carouselExampleIndicators{{ key }}" class="carousel slide" data-ride="carousel">

                            <div class="carousel-inner ">
                                <div class="carousel-item active">
                                    <img class="img-fluid" src="/assets/images/{{ room['photo1'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class=" img-fluid" src="/assets/images/{{ room['photo2'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class=" img-fluid" src="/assets/images/{{ room['photo3'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class=" img-fluid" src="/assets/images/{{ room['photo4'] }}" alt="photo chambre">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>


                    </div>
                {% endif %}
                {% if key is odd %}
                    <div class="d-block d-md-none col-md-6 p-0">



                        <div id="carouselExampleIndicators{{ key }}" class="carousel slide" data-ride="carousel">

                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block" src="/assets/images/{{ room['photo1'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block" src="/assets/images/{{ room['photo2'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block" src="/assets/images/{{ room['photo3'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block" src="/assets/images/{{ room['photo4'] }}" alt="photo chambre">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>


                        </div>

                {% endif %}

            </div>
        </div>
    {% endfor %}
{% endblock %}
