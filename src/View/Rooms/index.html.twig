{% extends 'layout.html.twig' %}
{% block title %}Chambres Grand Hôtel{% endblock %}
{% block content %}
    <h1>Les chambres du Grand Hôtel d'Orléans</h1>
    {% for key, room in rooms %}
        <div class="card roomCard mb-3 pb-3 mt-4">
            <div class="row m-0 align-items-center">
                {% if key is odd %}
                    <div class="d-none d-md-block col-md-6 p-0">
                        <div id="carouselExampleIndicators{{ key }}" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo1'] }}"
                                         alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo2'] }}"
                                         alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo3'] }}"
                                         alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo4'] }}"
                                         alt="photo chambre">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                {% endif %}
                <div class="col-md-6">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-5 pb-5">{{ room['name'] }}</h2>
                        <div class="row font-weight-bold">
                            <p class="card-text text-right col-5">{{ room['price'] }} €</p>
                            <p class="card-text text-right col-5">{{ room['area'] }} m²</p>
                        </div>
                        <div class="row">
                            <p class="card-text">{{ room['description'] }}</p>
                        </div>
                        <div class="services">
                            <div class="row mb-3 mt-4">
                                <h3 class="col text-center"> Services</h3>
                            </div>
                            <div class="card-text row">
                                {% for caracteristic in caracteristics[key] %}
                                    {% if loop.index0 is even %}
                                        <ul class="col-12 col-lg-4 text-center">
                                        {% if caracteristic !='' %}
                                            <li>{{ caracteristic }}</li>
                                        {% endif %}
                                    {% endif %}
                                    {% if loop.index0 is odd %}
                                        {% if caracteristic !='' %}
                                            <li>{{ caracteristic }}</li>
                                        {% endif %}
                                        </ul>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                {% if key is not odd %}
                    <div class="md-block col-md-6 p-0">
                        <div id="carouselExampleIndicators{{ key }}" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner ">
                                <div class="carousel-item active ">
                                    <img class=" imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo1'] }}"
                                         alt="photo chambre">
                                </div>
                                <div class="carousel-item justify-content-center">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo2'] }}" alt="photo chambre">
                                </div>
                                <div class="carousel-item justify-content-center">
                                    <img class=" imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo3'] }}"
                                         alt="photo chambre">
                                </div>
                                <div class="carousel-item justify-content-center">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo4'] }}"
                                         alt="photo chambre">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators{{ key }}" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                {% endif %}
                {% if key is odd %}
                    <div class="d-block d-md-none col-md-6 p-0">
                        <div id="carouselExampleIndicators{{ key }}bis" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo1'] }}"
                                         alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo2'] }}"
                                         alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo3'] }}"
                                         alt="photo chambre">
                                </div>
                                <div class="carousel-item">
                                    <img class="imageCarouselPageChambres"
                                         src="/assets/images/rooms/{{ room['photo4'] }}"
                                         alt="photo chambre">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators{{ key }}bis" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators{{ key }}bis" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
{% endblock %}
