{% extends 'layoutVisitor.html.twig' %}

{% block content %}
<div class="galerytitle">
    <h2>Notre galerie photo</h2>
</div>
<div class="container">
<div class="row justify-content-around">

    {% for card in cards %}

    <div class="card col-lg-4 col-sm-8 col-md-5">

        <img src="/assets/images/galerie/{{ card.picture }}" class="card-img-top img-thumbnail" alt="{{ card.title }}">
        <div class="card-body">
            <p class="card-title">{{ card.title }}</p>
        </div>

    </div>
{% endfor %}
</div>
</div>

{% endblock %}
